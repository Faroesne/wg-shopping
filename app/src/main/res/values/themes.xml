<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CommunityShopping" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deepblack</item>
        <item name="colorPrimaryVariant">@color/deepblack</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="iconTint">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/icegrey</item>
        <item name="colorSecondaryVariant">@color/coolgrey</item>
        <item name="colorOnSecondary">@color/brandred</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/icegrey</item>
        <!-- Splash Screen -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/deepblack</item>
    </style>

    <style name="Theme.CommunityShopping.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="toastStyle">
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/brandred</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/baseline_error_white_24dp</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
    </style>

    <style name="Theme.CommunityShopping.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CommunityShopping.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
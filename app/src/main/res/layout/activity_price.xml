<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PriceActivity">

    <TextView
            android:text="@string/einkaufspreis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            android:textSize="34sp"
            android:textColor="#000000" />

    <Button
            android:text="@string/einkauf_best_tigen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/confirmBuyBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="5dp" />

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="470dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/confirmBuyBtn"
            android:id="@+id/priceScroll"
            android:backgroundTint="#808080"
            android:layout_marginBottom="50dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/priceContainerList" />
    </ScrollView>

    <Button
            android:text="GESAMT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/totalBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/priceScroll"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/singleBtn"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="#808080" />

    <Button
            android:text="EINZELN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/singleBtn"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/priceScroll"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/totalBtn"
            android:backgroundTint="#000000" />

    <TextView
            android:text="Gesamt bezahlt: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totallyPaid"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/priceScroll"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/confirmBuyBtn"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            android:layout_marginEnd="100dp"
            android:textSize="16sp" />

    <TextView
            android:text="0,00â‚¬"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/priceScroll"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/confirmBuyBtn"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toEndOf="@+id/totallyPaid"
            android:textSize="16sp" />
</androidx.constraintlayout.widget.ConstraintLayout>